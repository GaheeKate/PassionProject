@model PassionProject.Models.BurgerDto

@{
    ViewBag.Title = "Edit";
}

<h2>Update Burger</h2>
<form action="/Burger/Update/@Model.Id" method="POST">
    <div style="display:none;">
        <input type="text" name="Id" value="@Model.Id" />
    </div>

    <div>
        <label>Name:</label> <input type="text" name="Name" value="@Model.Name" />
        <label>Price:</label> <input type="number" name="BurgerPrice" value="@Model.BurgerPrice"  />
    </div>
    
  
    <div>
        <input type="submit" value="Update Burger" />

    </div>
</form>


